{
    "manifest_version": 3,
    "name": "Marvin the Orb",
    "version": "1.0",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "48": "icon48.png"
    },
    "action": {
        "default_icon": {
            "48": "icon48.png"
        }
    }
}